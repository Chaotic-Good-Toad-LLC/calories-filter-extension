{
    "name": "БЖВК Filter",
    "version": "0.13",
    "description": "Фільтрує товари на silpo.ua за білками, жирами, вуглеводами та калоріями.",
    "manifest_version": 3,
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "content_scripts": [
        {
            "matches": ["https://silpo.ua/*"],
            "css": ["styles.css"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ]
}
