{
    "name": "БЖВК Filter",
    "version": "0.13",
    "description": "Фільтрує товари на silpo.ua та rozetka.com.ua за білками, жирами, вуглеводами та калоріями.",
    "manifest_version": 3,
    "icons": {
        "16": "icons/icon16.png",
        "48": "icons/icon48.png",
        "128": "icons/icon128.png"
    },
    "browser_specific_settings": {
        "gecko": {
            "id": "chaoticgoodtoad@gmail.com",
            "strict_min_version": "109.0",
            "data_collection_permissions": {
                "required": ["none"]
            }
        }
    },
    "content_scripts": [
        {
            "matches": ["https://silpo.ua/*", "https://rozetka.com.ua/*"],
            "css": ["styles.css"],
            "js": ["content.js"],
            "run_at": "document_idle"
        }
    ]
}
